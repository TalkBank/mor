LEXCAT = [scat adj]
ALLO:
ALLOSURF = LEXSURF
ALLOCAT = LEXCAT, ADD [allo aLa]
ALLO:
ALLOSURF = $X$C
ALLOCAT = LEXCAT, ADD [allo aLb]
ALLO:
ALLOSURF = $X$Cl
ALLOCAT = LEXCAT, ADD [allo aLc]
ALLO:
ALLOSURF = $X$Cle_$X$Cle
ALLOCAT = LEXCAT, ADD [allo a0], ADD [gen DUP]

