@UTF8

%**********
%  ADJECTIVES
%**********

% these next two make [scat adj] versions of the [scat part] forms in virr.cut
RULENAME:	adj-PASTP
LEX-ENTRY:
LEXSURF = $X
LEXCAT = [scat part], [bare yes], [adj yes]
ALLO:
ALLOSURF = $X
ALLOCAT = LEXCAT
ALLO:
ALLOSURF = $X
ALLOCAT = DEL [scat], ADD [scat adj]

RULENAME:	adj-PRESP
LEX-ENTRY:
LEXSURF = $X
LEXCAT = [scat part], [bare yes], [adj yes]
ALLO:
ALLOSURF = $X
ALLOCAT = LEXCAT
ALLO:
ALLOSURF = $X
ALLOCAT = DEL [scat], ADD [scat adj]

RULENAME:	adj-ble
LEX-ENTRY:
LEXSURF = $Xble  % probable/probably/probability
LEXCAT = [scat adj]
ALLO:
ALLOSURF = LEXSURF
ALLOCAT = LEXCAT, ADD [allo a0]
ALLO:
ALLOSURF = $Xbil	% probability
ALLOCAT = LEXCAT, ADD [allo aLb]
ALLO:
ALLOSURF = $Xbl		% probably
ALLOCAT = LEXCAT, ADD [allo aLc]

RULENAME:	adj-little
LEX-ENTRY:
